<h1>Редактировать учетную запись</h1>
<form accept-charset="UTF-8" action="/users" class="user_edit" id="user_edit" method="post"><div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;" /><input name="_method" type="hidden" value="put" /><input name="authenticity_token" type="hidden" value="9qz30ju6owadKPdd9RCSwBPuEtNRALtDDJAYR8/5aws=" /></div>
  {{#settings}}
  <p>
    <label for="user_login">Логин</label>
    <br>
    <input id="user_login" name="user[login]" size="30" type="text" value="{{login}}" />
  </p>
  <p>
    <label for="user_first_name">Имя</label>
    <br>
    <input id="user_first_name" name="user[first_name]" size="30" type="text" value="{{first_name}}" />
  </p>
  <p>
    <label for="user_last_name">Фамилия</label>
    <br>
    <input id="user_last_name" name="user[last_name]" size="30" type="text" value="{{last_name}}" />
  </p>
  <p>
    <label for="user_middle_name">Отчество</label>
    <br>
    <input id="user_middle_name" name="user[middle_name]" size="30" type="text" value="{{middle_name}}" />
  </p>
  <p>
    <label for="user_email">Адрес электронной почты</label>
    <br>
    <input id="user_email" name="user[email]" size="30" type="email" value="{{email}}" />
  </p>
  <p>
    <span class='color_sample' style="background-color: {{color}};"><label for="user_color">Цвет (для списков)</label></span>
    <select id="user_color" name="user[color]">
      <option value="{{color}}" selected="selected">{{color_name}}</option>
    </select>
  </p>
  
  <p>
    <label for="user_office_id">Офис</label>
    <br>
    <select id="user_office_id" name="user[office]">
      <option value="{{office_id}}" selected="selected">{{office}}</option>
    </select>
  </p>
  {{/settings}} 
  <div class='actions'>
    <input name="commit" type="submit" value="Отредактировать" />
  </div>
</form>