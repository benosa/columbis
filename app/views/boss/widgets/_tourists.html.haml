.current_container
  %table#tourists.tourists.reservations.tour_operators
    %tr
      %th.full_name
        %span= Tourist.human_attribute_name(:full_name)
      %th.phone_number
        %span= Tourist.human_attribute_name(:phone_number)
      %th.email
        %span= Tourist.human_attribute_name(:email)
      %th.address
        %span= Tourist.human_attribute_name(:address)
      %th.actions
        %span= t('actions')
      %th.actions
        %span= t('boss.active_record.widget.tables.tourists_created_at')
    - for tourist in tourists
      %tr{ :class => cycle('odd', 'even'), id: "tourist-#{tourist.id}"}
        %td
          %p= tourist.name
        %td
          %span= tourist.phone_number
        %td
          %span= tourist.email
        %td
          %p= tourist.address.try(:joint_address)
        %td
          = link_to '', edit_tourist_path(tourist), :class => 'edit_row', :title => t('edit'), id: "edit_tourist_#{tourist.id}"
        %td
          %span= tourist.created_at.strftime("%Y-%m-%d %H:%M:%S %Z")