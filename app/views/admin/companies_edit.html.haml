- content_for(:body_class) { 'panel edit_operator' }

- title t('.edit', :tariff_plan => @company.name)

= form_for @company, :url => admin_companies_update_path(@company.id) do |form|
  - @form_id = form.options[:html][:id]
  = render :partial => 'admin/company_form', :locals => { :f => form }

- content_for(:float_panel) do
  = link_to t('back'), :back, :class => 'back'
  = link_to t('save'), '#', :class => 'save', :data => { :submit => @form_id }
  = link_to t('.index_tariff_plan'), admin_index_path, :class => 'list_operator'