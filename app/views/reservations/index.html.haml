- title "Reservations"

%table
  %tr
    %th Name
    %th User
  - for reservation in @reservations
    %tr
      %td= reservation.name
      %td= reservation.user_id
      %td= link_to 'Show', reservation
      %td= link_to 'Edit', edit_reservation_path(reservation)
      %td= link_to 'Destroy', reservation, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Reservation", new_reservation_path
