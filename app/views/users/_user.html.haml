%tr
  %td= user.username
  %td= user.firstname
  %td= user.lastname
  %td= user.email
  %td= user.sign_in_count
  %td
    - if user.last_sign_in_at.blank?
      Never logged in
    - else
      = time_ago_in_words(user.last_sign_in_at.to_datetime)+' ago'
  %td= user.role
  %td= user.created_at.to_s(:datetime).downcase
  %td= user.updated_at.to_s(:datetime).downcase
  - if can? :update, user
    %td= link_to "Edit", edit_user_path(user)
  - if can? :destroy, user
    %td= link_to "Delete", user, :method => :delete, :confirm => "Are you sure?"
