%li{:class => (params[:controller] == 'claims' && params[:action] != 'new') ? 'active' : ''}
  = link_to t('.claims'), claims_path, :id => 'claims_link'
  .rmenu_dropdown
    %ul
      - { :contract => t('.contract'), :permit => t('.permit'), :warranty => t('.warranty'), :memo => t('.memo'), :act => t('.act') }.each do |mode, value|
        %li{ :class => li_class(@claim, mode) }
          - if @claim && !@claim.new_record?
            = link_to(value, edit_claim_printers_path(:claim_id => @claim.id, :printer => mode), :target => '_blank')
          - else
            = link_to value, '#', :class => "no_active_a"