- set_current_width(:small)
- content_for(:body_class) { 'low_resolution panel profile_edit' }

- title t('.title')

= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |form|
  - @form_id = form.options[:html][:id]
  = render :partial => 'users/form', :locals => { :f => form }

- content_for(:float_panel) do
  = link_to t('back'), :back, :class => 'back'
  - if is_admin? or is_boss?
    = link_to t('delete'), registration_path(resource_name), :class => 'delete_operator', :confirm => t('are_you_sure'), :method => :delete
  = link_to t('save'), '#', :class => 'save', :data => { :submit => @form_id }
  = link_to t('.forgot_password'), new_password_path(resource_name), :class => 'lost_pass'