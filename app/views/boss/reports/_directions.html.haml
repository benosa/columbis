.current_container
  = render partial: 'charts'

  %table.totals.reservations.tour_operators
    %thead
      %tr
        %th.number
          %span= t('report.n')
        %th= sort_link 'name', t('.direction')
        %th= sort_link 'amount', t('report.payment_amount'), :desc
        %th= sort_link 'items', t('report.claim_quantity')
    %tbody
      - @total.each_with_index do |row, i|
        %tr
          %td= i + 1
          %td= row['name']
          %td.center= number_to_currency(row['amount'], :unit => "")
          %td.center= row['items']
