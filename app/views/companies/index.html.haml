- title t('.companies')

%table#companies
  %thead
    %tr
      %th Название
      %th Электронная почта
      %th Официальная подпись
      %th Адрес
      %th
      %th
  %tbody
    - for company in @companies
      %tr
        %td= company.name
        %td= company.email
        %td= company.oficial_letter_signature
        - if company.address.present?
          %td= company.address.full_address
        - else
          %td Нет адреса
        %td= link_to t('show'), company
        %td= link_to t('edit'), edit_company_path(company)
        %td= link_to t('destroy'), company, :confirm => t('are_you_sure'), :method => :delete

%p= link_to t('.add_company'), new_company_path
