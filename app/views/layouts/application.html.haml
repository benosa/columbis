!!!
%html

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'jquery-ui'
    = javascript_include_tag 'application'
    = javascript_include_tag 'jquery.ui.datepicker'
    = csrf_meta_tag
    = yield(:head)

  %body
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      #documents_to_print_menu
        %ul
          %li= link_to "Брони", claims_path, :class => ((params[:controller] == "claims" and params[:action] == "index") ? "selected" : " ")
          %li= link_to "Новая заявка", new_claim_path, :class => ((params[:controller] == "claims" and params[:action] == "new") ? "selected" : " ")
          %li= link_to "Договор", '#'
          %li= link_to "Путевка", '#'
          %li= link_to "Памятка", '#'
          %li= link_to "Приходник", '#'
          %li= link_to "Справка", '#'
          %li= link_to "Вход для бухглатера", new_user_session_path, :class => "accountant_login"

      %div.clear

      #databases_menu
        %ul
          %li Базы
          %li= link_to "Реквизиты фирмы", addresses_path, :class => (controller.controller_name == "addresses" ? "selected" : " ")
          %li= link_to "Туристы", tourists_path, :class => (controller.controller_name == "tourists" ? "selected" : " ")
          %li= link_to "Туроператоры", operators_path, :class => (params[:controller] == "operators" ? "selected" : " ")
          %li= link_to "Потенц. клиенты", clients_path, :class => (controller.controller_name == "clients" ? "selected" : " ")
          %li= link_to "Симки", '#'
          %li= link_to "Агентства", companies_path, :class => (controller.controller_name == "companies" ? "selected" : " ")

      %div.clear

      %ul.hmenu
        %li= link_to t('home'), root_url
        = render 'devise/menu/registration_items'
        = render 'devise/menu/login_items'
        = link_to 'Управление', management_path

      %div.clear

      - if show_title?
        %h1= yield(:title)

      = yield
