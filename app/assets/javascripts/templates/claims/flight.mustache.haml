- id_prefix = 'claim_flights_attributes_{{num}}'
- name_prefix = 'claim[flights_attributes][{{num}}]'
.fake_row.flight.fields{ :id => "flight-{{num}}", :class => 'new_record' }
  .clearfix
    .col-actions
      .delete-wrap
        = link_to '', '#', :class => 'delete', :title => I18n.t('cancel'), data: { check: I18n.t('are_you_sure') }
    .col-main.clearfix
      .fake_col.col1
        .block-right
          .wrap-input
            = text_field_tag "#{name_prefix}[depart]", '', :id => "#{id_prefix}_depart", :class => 'datetimepicker depart'
        .block-stretch
          .wrap-input.autocomplete-wrap
            = text_field_tag "#{name_prefix}[airport_from]", '', :id => "#{id_prefix}_airport_from", :class => 'autocomplete from', data: { ac: { source: dropdown_autocomplete_claims_path('airport') } }
      .fake_col.col2
        .wrap-input
          = text_field_tag "#{name_prefix}[flight_number]", '', :id => "#{id_prefix}_flight_number", :class => 'flight'
      .fake_col.col3
        .block-right
          .wrap-input
            = text_field_tag "#{name_prefix}[arrive]", '', :id => "#{id_prefix}_arrive", :class => 'datetimepicker arrive'
        .block-stretch
          .wrap-input.autocomplete-wrap
            = text_field_tag "#{name_prefix}[airport_to]", '', :id => "#{id_prefix}_airport_to", :class => 'autocomplete to', data: { ac: { source: dropdown_autocomplete_claims_path('airport') } }

  = hidden_field_tag "#{name_prefix}[_destroy]", '{{_destroy}}', :id => "#{id_prefix}__destroy", :class => '_destroy'
  = hidden_field_tag "#{name_prefix}[id]", '', :id => "#{id_prefix}_id", :class => 'hidden_id'