- content_for(:error_messages) do
  = f.error_messages

%fieldset.form_column.form_column-small.first
  .form_block
    .block_title
      %h2= t('.common')
    .form_block_content
      .fake_row
        %p= f.label :name
        = f.text_field :name, :class => 'website'
        %p= f.label :full_name
        = f.text_field :full_name, :class => 'website'
        %p= f.label :register_number
        = f.text_field :register_number, :class => 'website'
        %p= f.label :register_series
        = f.text_field :register_series, :class => 'website'
        %p= f.label :inn
        = f.text_field :inn, :class => 'website'
        %p= f.label :ogrn
        = f.text_field :ogrn, :class => 'website'
        %p= f.label :code_of_reason
        = f.text_field :code_of_reason, :class => 'website'
        %p= f.label :phone_numbers
        = f.text_field :phone_numbers, :class => 'website'
        %p= f.label :site
        = f.text_field :site, :class => 'website'
        %p= f.label :banking_details
        = f.text_field :banking_details, :class => 'website'
        %p= f.label :actual_address
        = f.text_field :actual_address, :class => 'website'

%fieldset.form_column.form_column-small
  .form_block
    .block_title
      %h2= t('.address')
    .form_block_content
      .fake_row
        = f.fields_for :address do |address|
          = render :partial => 'shared/address', :locals => { :f => address }

%fieldset.form_column.form_column-small.last
  .form_block
    .block_title
      %h2= t('.insurer')
    .form_block_content
      .fake_row
        %p= f.label :insurer, t('.name')
        = f.text_field :insurer, :class => 'website'
        %p= f.label :insurer_full_name
        = f.text_field :insurer_full_name, :class => 'website'
        %p= f.label :insurer_address, t('.address')
        = f.text_field :insurer_address, :class => 'website'
        %p= f.label :actual_insurer_address
        = f.text_field :actual_insurer_address, :class => 'website'
        %p= f.label :insurer_provision, t('.provision')
        = f.text_field :insurer_provision, :class => 'website'
        %p= f.label :insurer_contract, t('.contract')
        = f.text_field :insurer_contract, :class => 'website'
        %p= f.label :insurer_contract_date, t('.contract_date')
        = f.text_field :insurer_contract_date, :value => l(f.object.insurer_contract_date, :format => :long),
          :class => 'website datepicker'
        %p= f.label :insurer_contract_start, t('.contract_start')
        = f.text_field :insurer_contract_start, :value => l(f.object.insurer_contract_start, :format => :long),
          :class => 'website datepicker'
        %p= f.label :insurer_contract_end, t('.contract_end')
        = f.text_field :insurer_contract_end, :value => l(f.object.insurer_contract_end, :format => :long),
          :class => 'website datepicker'

%fieldset.form_submit{ :style => 'display: none; height: 0;' }
  = f.submit
  - if @create_own_condition
    = hidden_field_tag :create_own, 1