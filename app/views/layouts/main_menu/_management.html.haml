- c = params[:controller]
- abil = params[:availability]
- a_class = c == 'dashboard/companies' || c == 'dashboard/users' || c == 'printers' || c == 'operators' || c == 'cities' || c == 'countries' || c == 'dashboard/dropdown_values' || c == 'sms_sendings' || c == 'tariff_plans' ? 'active' : ''

%li{:class => a_class}
  %a{:href => dashboard_edit_company_path}= t('.management')
  .rmenu_dropdown
    %ul
      %li.management.first_menu_stroke{:class => c == 'dashboard/companies' && 'active' }= link_to t('.company'), dashboard_edit_company_path
      %li.management.first_menu_stroke{:class => c == 'dashboard/users' && 'active' }= link_to t('.users'), dashboard_users_path
      %li.management.first_menu_stroke{:class => c == 'printers' && 'active' }= link_to t('.printers'), printers_path
      %li.management.first_menu_stroke{:class => c == 'operators' && abil != 'common' && 'active' }= link_to t('.operators_own'), operators_path
      %li.management.first_menu_stroke{:class => c == 'operators' && abil == 'common' && 'active' }= link_to t('.operators_common'), operators_path(:availability => "common")
      %li.management.first_menu_stroke{:class => c == 'countries' && 'active' }= link_to t('.countries'), countries_path
      %li.management.first_menu_stroke{:class => c == 'cities' && 'active' }= link_to t('.cities'), cities_path
      %li.management.first_menu_stroke{:class => c == 'dashboard/dropdown_values' && 'active' }= link_to t('.dropdown_values'), dashboard_dropdown_values_path
      %li.management= link_to t('.export_import'), dashboard_data_index_path
      -#
        %li.management.first_menu_stroke{:class => c == 'sms_sendings' && 'active' }= link_to t('.sms_sendings'), sms_sendings_path