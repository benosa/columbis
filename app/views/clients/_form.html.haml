= form_for @client do |f|
  = f.error_messages
  %table
    %tr
      %td= f.label 'ФИО'
      %td= f.label :date_of_birth
      %td{:colspan => "2"}
        = f.label 'Паспорт'
      %td= f.label :passport_valid_until
    %tr
      %td= f.text_field :full_name
      %td= f.text_field :date_of_birth
      %td= f.text_field :passport_series, 'size' => 4
      %td= f.text_field :passport_number
      %td= f.text_field :passport_valid_until
    %tr
      %td= f.label :phone_number
    %tr
      %td= f.text_field :phone_number
    %tr
      %td= f.label :address
    %tr
      %td= f.text_field :address
  %p
    = f.submit
