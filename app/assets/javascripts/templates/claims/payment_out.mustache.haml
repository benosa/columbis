- id_prefix = 'claim_payments_out_attributes_{{num}}'
- name_prefix = 'claim[payments_out_attributes][{{num}}]'
- i18n_prefix = 'claims.payments_out'
.fake_row.fields{ :id => "payment_out_{{num}}", :class => 'new_record' }
  .clearfix
    .col-actions
      .delete-wrap
        = link_to '', '#', :class => 'delete', :title => I18n.t('delete'), data: { check: I18n.t('are_you_sure') }
    .col-main.clearfix
      .fake_col.col1
        .block-left
          .two_line
            %p
              %label{ :for => "#{id_prefix}_date_in", :class => 'required' }= I18n.t("#{i18n_prefix}.date")
            .wrap-input
              = text_field_tag "#{name_prefix}[date_in]", '{{date_in}}', :id => "#{id_prefix}_date_in", :class => 'datepicker date_in date'
        .block-stretch
          .two_line
            %p
              %label{ :for => "#{id_prefix}_amount_prim", :class => 'required' }= I18n.t("#{i18n_prefix}.paid_prim")
            %label.operator_currency= '{{currency}}'
            .wrap-input.amount-input-wrap
              = text_field_tag "#{name_prefix}[amount_prim]", '{{amount_prim}}', :id => "#{id_prefix}_amount_prim", :class => 'amount_prim paid'
      .fake_col.col2
        .block-left
          .two_line
            %p
              %label{ :for => "#{id_prefix}_course" }= I18n.t("#{i18n_prefix}.course")
            .wrap-input
              = text_field_tag "#{name_prefix}[course]", '{{course}}', :id => "#{id_prefix}_course", :class => 'course date'
        .block-stretch
          .two_line
            %p
              %label{ :for => "#{id_prefix}_amount", :class => 'required' }= I18n.t("#{i18n_prefix}.paid")
            %label.amount_currency= I18n.t('rur')
            .wrap-input.amount-input-wrap
              = text_field_tag "#{name_prefix}[amount]", '{{amount}}', :id => "#{id_prefix}_amount", :class => 'amount'
      .fake_col.col3
        .two_line
          %p
            %label{ :for => "#{id_prefix}_form", :class => 'required' }= I18n.t("#{i18n_prefix}.paid_type")
          .approved-wrap
            %label{ :for => "#{id_prefix}_approved", :class => 'checkbox approved_label', :title => Payment.human_attribute_name(:approved) } &nbsp;
            = hidden_field_tag "#{name_prefix}[approved]", '0'
            = check_box_tag "#{name_prefix}[approved]", '1', false, :id => "#{id_prefix}_approved", :class => 'approved'
          .form-select-wrap.wrap-select.form-wrap
            %select{ :id => "#{id_prefix}_form", :name => "#{name_prefix}[form]", :class => 'form-select' }
              %option{ :value => '' }= I18n.t('nope')
              {{#form_options}}
              %option{ :value => '{{1}}' }= '{{0}}'
              {{/form_options}}

  = hidden_field_tag "#{name_prefix}[_destroy]", '{{_destroy}}', :id => "#{id_prefix}__destroy"
  = hidden_field_tag "#{name_prefix}[id]", '{{id}}', :id => "#{id_prefix}_id"