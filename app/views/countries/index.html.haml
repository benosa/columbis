- set_current_width(:small)
- content_for(:body_class) { 'panel' }

- title t('.title')

- content_for :top do
  %form.filter
    = render 'shared/search_field'

    = label_tag :availability, t('.availability')
    = select_tag :availability, options_for_select(availability_filter_options, 'all'), class: 'filter_select', id: 'availability_filter_options', data: { param: 'availability', filter: true }

= render 'list'

- content_for(:float_panel) do
  = link_to t('back'), :back, :class => 'back'
  = link_to t('.new_country'), new_country_path, :class => 'add_operator'