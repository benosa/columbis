!!!
%html{ :manifest => params[:offline] && '/tourism.manifest', :class => yield(:html_class) }
  %head
    %title
      = yield(:title) || 'Untitled'
    %meta{'http-equiv'=>'Content-Type', :content=>'text/html; charset=utf-8'}/
    - if javascript_local_data
      = javascript_tag(javascript_local_data)
    = stylesheet_link_tag 'application'
    - if small_width?
      = stylesheet_link_tag 'new_design/css/low'
    - elsif medium_width?
      = stylesheet_link_tag 'new_design/css/middle'
    - elsif large_width?
      = stylesheet_link_tag 'new_design/css/high'
    = stylesheet_link_tag 'common'
    = javascript_include_tag 'application'
    / [if lt IE 9]
      = javascript_include_tag 'css3-mediaqueries'
    - if params[:controller] =~ %r[^boss/]
      = stylesheet_link_tag 'boss'
      = javascript_include_tag 'boss'
    = csrf_meta_tag
    = yield(:head)

  %body{ :class => "#{body_class} #{yield(:body_class)}".strip }
    #container.all.clearfix

      .header

        = render 'layouts/main_menu/menu'

        .clear

        = render 'layouts/main_menu/second_menu'

      .clear

      - if content_for? :navigation
        .navigation
          = yield :navigation
        .clear

      .wrapper
        #content.content
          = render 'shared/messages'
          .top
            - if show_title?
              %h1= yield :title
              #ajax-indicator
            - if content_for? :top
              = yield :top
          .clear

          = yield

    #footer.footer
      - if content_for? :fixed_pagination
        #fixed_pagination.fixed_pagination.clearfix
          = yield :fixed_pagination
      - if content_for? :float_panel
        .float_panel
          .panel_content
            = yield :float_panel

      .footer_content
        %p.copy &copy; Devmen. All rights reserved, 2012
        %p.right tourism.devmen.com
