#information.form_block.grey_block
  .block_title
    %h2= t('.additional_information')
  .form_block_content
    .fake_row
      .two_line
        %p= f.label :documents_status, t('.trip_documents')
        = f.select :documents_status , (Claim::DOCUMENTS_STATUSES).collect {|o| [ t('claims.documents_statuses.' << o), o ] }, {},
            :class => "#{claim.documents_status} documentation_select #{'error' if claim.documents_status != Claim::DOCUMENTS_STATUSES.last}"
      .two_line
        %p= f.label :tourist_stat, t('.tourist_stat')
        = f.text_field :tourist_stat, :class => 'autocomplete tourist_stat documentation_select', data: ac_data(source: dropdown_autocomplete_claims_path('tourist_stat'))
      .two_line.special_offer
        = f.label :special_offer, t('.special_offer'), :class => 'checkbox', :style => "padding-left:20px;", :id => "special_offer_checkbox", :data => t('.special_offer_warning', :value => claim.applicant.full_name)
        = f.check_box :special_offer
    .fake_row
      .two_line
        %p= f.label :docs_note
        = f.text_area :docs_note, :rows => 6, :class => 'docs_note'