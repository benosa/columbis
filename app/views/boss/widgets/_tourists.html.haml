.current_container
  %table#tourists.tourists.reservations.tour_operators
    %tr
      %th.created_at
        %span= t('boss.active_record.widget.table.tourists_created_at')
      %th.full_name
        %span= t('boss.active_record.widget.table.full_name')
      %th.phone_number
        %span= t('boss.active_record.widget.table.phone_number')
      %th.email
        %span= t('boss.active_record.widget.table.email')
      %th.address
        %span= t('boss.active_record.widget.table.address')
      %th.actions
        %span= t('actions')
    - for tourist in tourists
      %tr{ :class => cycle('odd', 'even'), id: "tourist-#{tourist.id}"}
        %td
          %span= l(tourist.created_at.to_date, format: :long)
        %td
          %p= tourist.name
        %td
          %span= tourist.phone_number
        %td
          %span= tourist.email
        %td
          %p= tourist.address.try(:joint_address)
        %td
          = link_to '', edit_tourist_path(tourist), :class => 'edit_row', :title => t('edit'), id: "edit_tourist_#{tourist.id}"