- title t('.title')

= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  = f.error_messages

  %p
    = f.label :email
    %br
    = f.email_field :email

  %p
    = f.submit t('.send_me_reset_password_instructions')

= render :partial => "devise/shared/links"
