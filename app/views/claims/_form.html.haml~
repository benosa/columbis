= form_for @claim do |f|
  = f.error_messages
  %p
    = f.label :office_id
    %br
    = f.select :office_id, Office.all.collect {|o| [ o.name, o.id ] }
  %p
    = f.label :user_id
    %br
    = f.select :user_id, User.all.collect {|o| [ o.first_last_name, o.id ] }
  %hr

  %p
    = f.label :operator_confirmation
    = f.text_field :operator_confirmation, :size => 10

    = f.label :visa
    = f.text_field :visa, :size => 10    

    = f.label :check_date
    = f.text_field :check_date, :size => 10
        
  %p
    = f.label :operator_id
    %br
    = f.select :operator_id, Operator.all.collect {|o| [ o.name, o.id ] }    

  %p
    = f.label :tourist_id
    %br
    = f.select :tourist_id, Tourist.all.collect {|o| [ o.first_last_name, o.id ] }
  %p
    = f.label :description
    %br
    = f.text_area :description, :cols => 80, :rows => 6
  %p
    = f.label :check_date
    %br
    = f.text_field :check_date
  %p
    = f.submit
    
  /:airport_to, :airport_back, :flight_to, :flight_back, :depart_to, :depart_back, :time_to, :time_back  
