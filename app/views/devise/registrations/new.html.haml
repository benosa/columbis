- title t('.title')

= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = f.error_messages

  = render :partial => 'users/user_attributes', :locals => { :f => f }
  = render :partial => 'users/password', :locals => { :f => f }

  .actions
    = f.submit t('.submit')

= link_to "Назад", :back
= render :partial => "devise/shared/links"
