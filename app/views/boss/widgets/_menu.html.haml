.widget-menu
  -#.widget-btn.widget-btn-type
    -#%a{ href: "#"} Тип
  .widget-btn.widget-btn-settings.btn-group
    = link_to t('boss.active_record.widget.menu.settings'), '#', id: "settings_#{widget.id}", class: "settings", "data-toggle" => "dropdown"
    - case widget.widget_type
    - when 'factor'
    - when 'chart'
      = render partial: 'boss/widgets/charts_menu', locals: { widget: widget }
    - when 'table'
    - when 'leader'
      = render partial: 'boss/widgets/leaders_menu', locals: { widget: widget }
  .widget-btn.widget-btn-delete
    %a{ href: "#"}= t('boss.active_record.widget.menu.delete')
  .widget-btn.widget-btn-more
    %a{ href: "#"}