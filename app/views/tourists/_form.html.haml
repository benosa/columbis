= form_for(@tourist) do |f|
  - if @tourist.errors.any?
    #error_explanation
      %h2
        = pluralize(@tourist.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @tourist.errors.full_messages.each do |msg|
          %li= msg
  %table
    %tr
      %th
        = f.label 'ФИО'
        %br/
        / .hint
        (На кого оформляется договор)      
      %th= f.label :date_of_birth
      %th{:colspan => "2"}
        = f.label 'Паспорт'
      %th= f.label :passport_valid_until
      %th= f.label :phone_number
      %th= f.label :address
    %tr
      %td= f.text_field :full_name
      %td= f.text_field :date_of_birth, :class => 'datepicker', :style => 'width: 75%;', :value => l(@tourist.date_of_birth, :format => :long)
      %td= f.text_field :passport_series
      %td= f.text_field :passport_number
      %td= f.text_field :passport_valid_until, :class => 'datepicker', :style => 'width: 75%;', :value => l(@tourist.passport_valid_until, :format => :long)

      %td= f.text_field :phone_number
      %td= f.text_field :address
    
  .actions
    = f.submit
