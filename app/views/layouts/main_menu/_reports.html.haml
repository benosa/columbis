- c = params[:controller]
- a = params[:action]
%li{:class => (c == 'boss/reports' || c == 'boss/base') && 'active' }
  %a{:href => '#'}= t('.analytics')
  .rmenu_dropdown
    %ul{:style => "width: 1024px"}
      %li.first_menu_stroke.report_types{:class => c == 'boss/base' && 'active' }
        = link_to t('.desktop'), boss_index_path if user_signed_in? && %w(admin boss).include?(current_user.role)
      %li.first_menu_stroke.report_types{:class => c == 'boss/reports' && (a == 'income' || a == 'offices_income') && 'active' }
        = link_to t('.income_title'), '#'
      %li.first_menu_stroke.report_types{:class => c == 'boss/reports' && (a == 'margin' || a == 'offices_margin') && 'active' }
        = link_to t('.margin_title'), '#'
      %li.first_menu_stroke.report_types{:class => c == 'boss/reports' && (a == 'managers_income' || a == 'managers_margin') && 'active' }
        = link_to t('.managers_title'), '#'
      %li.first_menu_stroke.report_types{:class => c == 'boss/reports' && (a == 'normalcheck' || a == 'directions' || a == 'operators' || a == 'tourprice' || a == 'tourduration' || a == 'hotelstars') && 'active' }
        = link_to t('.segmentation_title'), '#'
      %li.first_menu_stroke.report_types{:class => c == 'boss/reports' && (a == 'clientsbase' || a == 'repurchase' || a == 'increaseclients' || a == 'salesfunnel') && 'active' }
        = link_to t('.clientbase_title'), '#'
      %li.first_menu_stroke.report_types{:class => c == 'boss/reports' && a == 'promotionchannel' && 'active' }
        = link_to t('.promotionchannel_title'), '#'
      %li.clear
        &nbsp;
      %li{:class => c == 'boss/reports' && a == 'income' && 'active' }
        = link_to t('.income'), boss_reports_path(:income)
      %li{:class => c == 'boss/reports' && a == 'offices_income' && 'active' }
