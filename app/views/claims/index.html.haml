- title t('.claims'), false

%table#claims{ :rules => 'all'}
  %tr
    %th= t('.reservation_date')
    %th= t('.manager')
    %th= t('.full_name')
    %th= t('.to')
    %th= t('.from')
    %th= t('.visa')
    %th= t('.term')
    %th= t('.depart_to')
    %th= t('.depart_back')
    %th= t('.operator')
    %th= t('.claim')
    %th= t('.price')
    %th= t('.calculation')
    %th= t('.advance')
    %th= t('.debt')
    %th= t('.payment_term')
    %th= t('.currency')
    %th= t('.paid')
    %th= t('.docs')
    %th= t('.memo')
    %th= t('.check_date')

  - @claims.each do |claim|
    %tr
      %td= claim.reservation_date
      %td= claim.user.login
      %td= claim.applicant.try(:full_name)
      %td= claim.country.try(:name)
      %td= claim.airport_back
      %td{ :class => claim.visa }
        ????
      %td= claim.visa_check
      %td= claim.depart_to.strftime('%d-%m-%Y %H:%M') if claim.depart_to
      %td= claim.depart_back.strftime('%d-%m-%Y %H:%M') if claim.depart_back
      %td= claim.operator.try(:name)
      %td= claim.num
      %td= claim.num
      %td= claim.num
      %td= claim.num
      %td= claim.tourist_debt
      %td= claim.num
      %td= claim.currency
      %td= claim.num
      %td= claim.num
      %td= claim.num
      %td= claim.check_date
      %td= link_to t('edit'), edit_claim_path(claim)
      %td= link_to t('destroy'), claim, :confirm => t('are_you_sure'), :method => :delete

%p= link_to t('.new_claim'), new_claim_path
