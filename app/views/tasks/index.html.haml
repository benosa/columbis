- set_current_width(:small)
- content_for(:body_class) { 'panel' }

- title t('.tasks')

- content_for :top do
  %form.filter
    = render 'shared/search_field'

    = label_tag :status, t('.status')
    = select_tag :status, options_for_select(Task::STATUS.map{|st| [ t("task_status.#{st}"), st ] }, params[:status]),
      :prompt => t('.all'), :class => 'filter_select', :data => { :param => 'status', :filter => true }

.tasks
  = render 'tasks'

- content_for(:float_panel) do
  = link_to t('back'), :back, :class => 'back'
  = link_to t('.add_task'), new_task_path, :class => 'add_operator'
