- content_for(:body_class) { 'edit_operator' }

= form_for resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post } do |f|

  - content_for(:error_messages) do
    = f.error_messages header_message: false

  %fieldset.form_column.first.sign_form
    .form_block
      .block_title
        %h2= t('.title')
      .form_block_content
        .fake_row
          = f.text_field :email, :class => 'main_email', :value => ""
          %p= f.label :email
          = check_field(@user)
          %p= f.label :generate_password, :class => 'checkbox left_checkbox'
          = f.check_box :generate_password
          %p.submit_row= f.submit t('.send_me_reset_password_instructions'), :class => 'btn'
          %p.links
            = render :partial => "devise/shared/links"
