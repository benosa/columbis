-# local_assigns: [:row_count, :show_others_label]
%form.filter
  - if @is_income
    = label_tag :period, t('.period')
    = select_tag :period, options_for_select(period_options, 'year'), data: { param: 'period', default: 'year' }
    - if @is_margin
      = label_tag :margin_types, t('.margin_type')
      = select_tag :margin_types, options_for_select(margin_options, 'profit_acc'), data: { param: 'margin_types', default: 'profit_acc' }
  - unless local_assigns[:period_selects] === false
    .field_wrapper
      = label_tag :period, t('.period')
      = select_tag :period, options_for_select(period_options, 'month'), class: 'period', data: { param: 'period', default: 'month' }
    .field_wrapper
      = label_tag :start_date, t('.start_date')
      = text_field_tag :start_date, l(@report.start_date, format: :long), class: 'datepicker start_date date', data: { param: 'start_date', filter: 1, default: l(@report.start_date, format: :long) }
    .field_wrapper
      = label_tag :end_date, t('.end_date')
      = text_field_tag :end_date, l(@report.end_date, format: :long), class: 'datepicker end_date date', data: { param: 'end_date', filter: 1, default: l(@report.end_date, format: :long) }
  - unless local_assigns[:row_count] === false
    .field_wrapper
      = label_tag :row_count, local_assigns[:row_count] || t('.row_count')
      = select_tag :row_count, options_for_select(row_count_options, @report.row_count), class: 'row_count', data: { param: 'row_count', filter: 1, default: @report.row_count }
  - unless local_assigns[:show_others_label] === false
    .field_wrapper
      = label_tag :show_others, local_assigns[:show_others_label] || t('report.others'), class: 'checkbox left_checkbox show_others'
      = check_box_tag :show_others, 1, @report.show_others, data: { param: 'show_others', filter: 1, default: @report.show_others, unchecked: '0' }

  %fieldset
    - if small_width?
      = link_to '', '#', id: 'filter_reset', class: 'filter_reset', title: t('.filter_reset')
      = link_to '', '#', id: 'settings', class: 'settings', title: t('.settings')
      = render partial: local_assigns[:settings_menu] || 'settings_menu'
    - else
      = link_to t('.filter_reset'), '#', id: 'filter_reset', class: 'filter_reset'
      = link_to t('.settings'), '#', id: 'settings', class: 'settings'
      = render partial: local_assigns[:settings_menu] || 'settings_menu'