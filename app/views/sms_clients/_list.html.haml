.current_container
  %table#sms_sendings.tourists.reservations.tour_operators
    %tr
      %th.send_an
        = sort_link( :phone_number, t('.phone_number'), :default)
      %th.signature
        = sort_link( :first_name, t('.first_name') )
      %th.contact_group
        = sort_link( :last_name, t('.last_name') )
      %th.contact_group
        = sort_link( :middle_name, t('.middle_name') )
      %th.content
        = sort_link( :date_of_birth, t('.date_of_birth') )

    - for client in @clients
      %tr{ :class => cycle('odd', 'even'), id: "tourist-#{client.id}"}
        %td
          %p= client.phone_number
        %td
          %p= client.first_name
        %td
          %p= client.last_name
        %td
          %p= client.middle_name
        %td
          %p= client.date_of_birth

  - unless @clients.nil?
    = render partial: 'shared/pagination', locals: { collection: @clients }