- title t('.title')

= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = f.error_messages

  = render :partial => 'users/user_attributes', :locals => { :f => f }

  .actions
    = f.submit t('.submit')

%p
  = render :partial => "devise/shared/links"
  = link_to t('back'), :back

- if is_admin? or is_boss?
  %h3 Удаление аккаунта
  %p= link_to t('delete'), registration_path(resource_name), :confirm => t('are_you_sure'), :method => :delete
